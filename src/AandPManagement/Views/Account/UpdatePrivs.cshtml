@model AandPManagement.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Update User Privileges";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("UpdatePrivs", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Update User Privileges</h4>
    <hr/>
    <div class="form-group">
        <h1>User</h1>
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>

    <div class="form-group">
        <h1>Select Privilege</h1>
        <div class="col-md-10">
            @Html.DropDownList("Name")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Update" />
        </div> 
    </div>
}